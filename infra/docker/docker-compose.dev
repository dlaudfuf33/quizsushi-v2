version: "3.9"

services:
  db:
    image: timescale/timescaledb-ha:pg15-latest
    container_name: quizsushi-db
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: quiz
      POSTGRES_PASSWORD: quiz
      POSTGRES_DB: quizsushi
    volumes:
      - ../db/init.sql:/docker-entrypoint-initdb.d/init.sql

  backend:
    build: ../../backend
    container_name: quizsushi-backend
    ports:
      - "8080:8080"
    volumes:
      - ../../backend:/app
    depends_on:
      - db
    environment:
      SPRING_PROFILES_ACTIVE: local
      DB_HOST: db

  frontend:
    build: ../../frontend
    container_name: quizsushi-frontend
    ports:
      - "3000:3000"
    volumes:
      - ../../frontend:/app
    environment:
      NEXT_PUBLIC_API_URL: http://localhost:8080
    depends_on:
      - backend
